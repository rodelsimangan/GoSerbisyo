@model GoSerbisyo.Models.ServiceViewModel

@using (Html.BeginForm("", "Results", FormMethod.Post, new { @class = "form-inline", role = "form" }))
{
    <div class="form-group">
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Service: Ex. Van Rental, Aircon Cleaning" , style = "width:350px"})
    </div>
    <div class="form-group">
        @Html.TextBoxFor(m => m.Location, new { @class = "form-control", placeholder = "Location: Ex. Santa Rosa, Laguna, Quezon City", style = "width:350px" })
    </div>
    <button type="submit" class="btn btn-success">Search</button>
}