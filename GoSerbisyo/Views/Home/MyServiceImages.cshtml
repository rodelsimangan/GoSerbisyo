@model List<GoSerbisyo.Models.ServiceImageViewModel>

@{
    ViewBag.Title = "My Service Images";
}

<div class="row margin-bottom-5 admin-content">
    <div class="col-xs-12">
        <div class="col-xs-6">
            <div class="page-head">
                <div class="page-title">
                    <h1>
                        <span>My Service Images</span>
                    </h1>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="col-xs-12 text-right">
                    <input type="hidden" class="form-control" id="service-id" value="@ViewData["ServiceId"]" />
                    <button id="AddServiceImageButton" class="btn btn-primary" data-toggle="modal" data-target="#myServiceImageModal"><i class="fa fa-plus"></i> Add Image</button>
                </div>
                <div class="col-xs-12">
                    <div class="row">&nbsp;</div>
                    @for (int i = 0; i < Model.Count(); i++)
                    {
                        var ctr = i % 3;

                        if (ctr == 0)
                        {
                            @:<div class="row">
                            }
                            var item = Model[i];
                            <div class="col-xs-4">
                                <img class="img-thumbnail" id="serviceImage" alt="No Image" src="@Url.Content(string.Concat("/Uploads/Galleries/",item.ImagePath))">
                                <button data-toggle="modal" id="@item.Id" class="btn btn-circle btn-xs red UpdateGalleryButton"><span class="fa fa-edit"></span></button>
                                <button id="@item.Id" class="btn btn-circle btn-xs red DeleteGalleryButton"><span class="fa fa-trash"></span></button>
                            </div>
                            if ((ctr == Model.Count - 1) || (ctr == 2))
                            {
                                @:</div><div class="row">&nbsp;</div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Small modal -->
